{
    # Disable automatic HTTPS since Render handles it
    auto_https off
    # Disable admin API
    admin off
}

:10000 {
    # Enable FrankenPHP
    php_server {
        # FrankenPHP specific settings
        worker /app/public/index.php
        env APP_ENV=production
    }
    
    # Set root directory
    root * /app/public
    
    # Enable file serving
    file_server
    
    # Basic logging
    log {
        output stdout
        format console
    }
} 